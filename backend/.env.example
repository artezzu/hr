# API Configuration
# При деплое измените на реальный хост и порт
API_HOST=localhost
API_PORT=8000
# API_URL будет автоматически сформирован из HOST и PORT
# или можно задать явно полный URL
API_URL=http://localhost:8000

# Security Configuration
# ВАЖНО! При деплое обязательно измените SECRET_KEY на уникальное значение
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
# При деплое добавьте все домены, с которых будут приходить запросы,
# включая домен HeadHunter и домен вашего фронтенда
CORS_ORIGINS=http://localhost:3000,https://hh.ru,https://tashkent.hh.uz,https://hh.uz,https://your-frontend-domain.com

# Database Configuration
# При деплое рекомендуется использовать PostgreSQL или MySQL
# Пример для PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost/dbname
DATABASE_URL=sqlite:///./sql_app.db

# Telegram Bot Configuration
BOT_TOKEN=your-telegram-bot-token

# HeadHunter API Configuration
HH_API_CLIENT_ID=your-hh-client-id
HH_API_CLIENT_SECRET=your-hh-client-secret 